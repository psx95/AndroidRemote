<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="PRESENTATION MODE"
        android:textStyle="bold"
        android:textColor="@color/md_blue_700"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_indigo_300"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/md_indigo_400"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:src="@drawable/ic_left_arrow_key"
                android:id="@+id/presentation_back_slide"
                android:layout_width="wrap_content"
                android:background="#0000"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView17" />

            <ImageButton
                android:src="@drawable/ic_right_arrow_key"
                android:id="@+id/presentation_next_slide"
                android:background="#0000"
                android:layout_marginStart="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/ic_play_presentation"
                android:id="@+id/start_presentation"
                android:background="#0000"
                android:layout_marginTop="5dp"
                android:layout_marginStart="115dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:src="@drawable/ic_pencil_white"
                android:id="@+id/presentation_ink_annotations"
                android:layout_marginStart="305dp"
                android:background="#0000"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="404dp"
            android:id="@+id/trackpad_presentation" />

        <FrameLayout
            android:background="@color/md_indigo_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="CLOSE"
                android:background="#0000"
                android:textColor="@color/md_grey_100"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="270dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close_button_presentation" />

            <android.support.v7.widget.AppCompatCheckBox
                android:text="Use Laser Pointer"
                android:buttonTint="@color/md_grey_100"
                android:layout_marginTop="8dp"
                android:textColor="@color/md_grey_100"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_lasers" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_pause"
                android:layout_marginStart="200dp"
                android:id="@+id/imageButton_pause_presentation" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>