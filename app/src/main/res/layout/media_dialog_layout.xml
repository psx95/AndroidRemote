<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="300dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Media"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/md_blue_700"
        android:textAlignment="center"
        android:id="@+id/media_remote_head" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_vol_up"
        android:src="@drawable/volume_up_not_pressed"
        android:background="#0000"
        android:layout_below="@+id/media_remote_head"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_vol_down"
        android:src="@drawable/volume_down_not_pressed"
        android:background="#0000"
        android:layout_above="@+id/media_panel_close"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_play"
        android:src="@drawable/play_button_not_pressed"
        android:background="#0000"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageButton_vol_up"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_fast_forward"
        android:src="@drawable/fast_forward_not_pressed"
        android:background="#0000"
        android:layout_alignTop="@+id/imageButton_play"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_previous"
        android:src="@drawable/previous_not_pressed"
        android:background="#0000"
        android:layout_alignTop="@+id/imageButton_play"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:background="#0000"
        android:textColor="@color/md_blue_700"
        android:id="@+id/media_panel_close"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>